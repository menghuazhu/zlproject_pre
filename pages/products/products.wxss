page {
  height: 100%;
  padding-bottom: 0;
  background-color: #f0f0f0;
}

.container {
  width: 100%;
  font-size: 28rpx;
}

.switch_img, .swiperclass, .slide-image {
  width: 750rpx;
  height: 400rpx; 
}

.posi {
  width: 100%;
}

.position {
  width: 100%;
  position: absolute;
  top:400rpx;
  z-index: 10;
}

.tabTit {
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: solid 1px #eee;
  /* position:fixed;
  top:0; */
  width: 750rpx;
  /* z-index: 1; */
  background: #fff;
  font-size: 15px;
  text-align: center;
  margin-top: 15rpx;
}

.tabTit .active {
  color: #00bfff;
  background: #fff;
}

.tabTit .active image {
  transform: rotate(180deg);
  background: none;
}

.tabTit image {
  width: 26rpx;
  height: 26rpx;
  vertical-align: middle;
  margin-left: 5px;
}

.flex1 {
  flex: 1;
  overflow: hidden;
  display: block;
}

/*弹性盒模型*/

.box {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}

.clear {
  clear: both;
  overflow: hidden;
}

.tabLayer {
  box-shadow: 0 5px 5px rgba(0, 0, 0, 0.15);
  width: 33%;
  overflow: hidden;
  /* position: fixed;
  top:90rpx;
  z-index: 1; */
  background: #fff;
  padding-bottom: 40rpx;
  border-bottom: solid 1px #eee;
  text-align: center;
  position: relative;
  z-index: 99;
  /* top:354rpx; */
}

.tabLayer text {
  display: block;
  width: 210rpx;
  height: 60rpx;
  line-height: 60rpx;
  /* float:left; *//* border: solid 1px #eee; */
  margin: 20rpx 0 0 26rpx;
  font-size: 15px;
}

.tabLayer .active {
  color: #00bfff;
  border-color: #00bfff;
}

navigator {
  display: inline;
}

.list {
  width: 750rpx;
  /* margin-top: 105rpx; */
}

.list_con {
  width: 96.5%;
  margin: auto;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-wrap: wrap;
  flex-wrap: wrap;
  justify-content: space-between;
}

.list .list_item {
  background-color: #fff;
  border: 1rpx solid #e8e8e8;
  width: 354rpx;
  height: 480rpx;
  border-radius: 10rpx;
  margin-top: 12rpx;
  position: relative;
}

.newp_img {
  width: 52rpx;
  height: 52rpx;
  position: absolute;
  top: 0;
  left: 12rpx;
  z-index: 2;
}

.list .list_item .img {
  width: 100%;
  height: 310rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  flex-direction: column;
  align-content: center;
}

.list .list_item .img image {
  width: 50%;
  height: 88%;
  margin: auto;
}

.list .list_item .info {
  width: 100%;
  height: 80rpx;
}

.list .list_item .info .title {
  width: 90%;
  display: block;
  margin: auto;
  color: #333;
  text-align: center;
  font-size: 32rpx;
  padding: 20rpx 0rpx 20rpx 0rpx;
}

.list .list_item .details {
  width: 100%;
  height: 50rpx;
}

.list .list_item .details .details_title {
  width: 90%;
  display: block;
  margin: auto;
  color: #a9a9a9;
  text-align: right;
  font-size: 15px;
  padding-top: 9rpx;
}

.more_img {
  width: 40rpx;
  height: 40rpx;
}

.list .list_item .info .price {
  color: #ff2727;
  margin-left: 10px;
  margin-top: 10px;
}

.list .list_item .info .num {
  position: absolute;
  left: 0px;
  bottom: 10px;
  color: #747474;
  margin-left: 10px;
  font-size: 15px;
}

/*
*上拉刷新分页
*/
.page-load {
  width: 100%;
  text-align: center;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
  color: rgb(112, 111, 111);
}
